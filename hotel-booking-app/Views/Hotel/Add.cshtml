@model HotelBookingApp.Pages.HotelViewModel

    <div class="h1">
        <h1>Add a Hotel</h1>
    </div>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Hotel.Name">Name</label>
        <input type="text" asp-for="@Model.Hotel.Name" />
        <span asp-validation-for="@Model.Hotel.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Description">Description</label>
        <input type="text" asp-for="@Model.Hotel.Description" />
        <span asp-validation-for="@Model.Hotel.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Price">Price</label>
        <input type="number" asp-for="@Model.Hotel.Price" />
        <span asp-validation-for="@Model.Hotel.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.StarRating">Star Rating</label>
        <input type="number" asp-for="@Model.Hotel.StarRating" />
        <span asp-validation-for="@Model.Hotel.StarRating"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Location.Country">Cuntry</label>
        <input type="text" asp-for="@Model.Hotel.Location.Country" />
        <span asp-validation-for="@Model.Hotel.Location.Country"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Location.Region">Region</label>
        <input type="text" asp-for="@Model.Hotel.Location.Region" />
        <span asp-validation-for="@Model.Hotel.Location.Region"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Location.City">City</label>
        <input type="text" asp-for="@Model.Hotel.Location.City" />
        <span asp-validation-for="@Model.Hotel.Location.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Location.Address">Address</label>
        <input type="text" asp-for="@Model.Hotel.Location.Address" />
        <span asp-validation-for="@Model.Hotel.Location.Address"></span>
    </div>
    <input type="number" asp-for="@Model.Hotel.PropertyTypeId" />
    <button type="submit">Add</button>

</form>
