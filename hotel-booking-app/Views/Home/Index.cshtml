@model IndexPageView

@{
    ViewData["Title"] = "Home";
}

<h2>List of Hotels</h2>
<table class="table">
    <tr>
        <th>
            <a asp-action="Index" 
               asp-route-orderBy="Name"
               asp-route-desc="@Model.QueryParams.NextDesc" 
               asp-route-currentPage="@Model.QueryParams.CurrentPage">
                @Html.DisplayNameFor(model => model.Hotels.First().Name)
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-orderBy="Description"
               asp-route-desc="@Model.QueryParams.NextDesc"
               asp-route-currentPage="@Model.QueryParams.CurrentPage">
                @Html.DisplayNameFor(model => model.Hotels.First().Description)
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-orderBy="Price"
               asp-route-desc="@Model.QueryParams.NextDesc"
               asp-route-currentPage="@Model.QueryParams.CurrentPage">
                @Html.DisplayNameFor(model => model.Hotels.First().Price)
            </a>
        </th>
    </tr>

    @foreach (var hotel in Model.Hotels)
    {
        <tr>
            <td>@hotel.Name</td>
            <td>@hotel.Description</td>
            <td>@hotel.Price</td>
        </tr>
    }
</table>
