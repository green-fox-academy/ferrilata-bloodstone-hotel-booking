@model HotelBookingApp.Pages.HotelViewModel
@using HotelBookingApp.Services
@inject IDateTimeService DateTimeService
@{
    ViewData["Title"] = "Add Hotel";
}

<h2>Add a Hotel</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Hotel.Name"></label>
        <input type="text" asp-for="@Model.Hotel.Name" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="imageList">Upload images</label>
        <input type="file" name="imageList" class="form-control" multiple />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Description"></label>
        <input type="text" asp-for="@Model.Hotel.Description" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.StarRating"></label>
        <input type="number" asp-for="@Model.Hotel.StarRating" class="form-control" />
        <span asp-validation-for="@Model.Hotel.StarRating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.TimeZoneId">Choose your time zone</label>
        <select asp-for="@Model.Hotel.TimeZoneId" class="form-control">
            @foreach (var timeZone in DateTimeService.GetTimeZones())
            {
                <option value="@timeZone.BaseUtcOffset">@timeZone.DisplayName</option>
            }
        </select>
        <span asp-validation-for="@Model.Hotel.TimeZoneId" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Hotel.Location.Country">Country</label>
                <input type="text" asp-for="@Model.Hotel.Location.Country" class="form-control" />
                <span asp-validation-for="@Model.Hotel.Location.Country" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Hotel.Location.Region"></label>
                <input type="text" asp-for="@Model.Hotel.Location.Region" class="form-control" />
                <span asp-validation-for="@Model.Hotel.Location.Region" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Hotel.Location.City"></label>
                <input type="text" asp-for="@Model.Hotel.Location.City" class="form-control" />
                <span asp-validation-for="@Model.Hotel.Location.City" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Hotel.Location.Address"></label>
                <input type="text" asp-for="@Model.Hotel.Location.Address" class="form-control" />
                <span asp-validation-for="@Model.Hotel.Location.Address" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.PropertyTypeId"></label>
        <select asp-for="@Model.Hotel.PropertyTypeId" asp-items="@Model.PropertyTypes" class="form-control"></select>
        <span asp-validation-for="@Model.Hotel.PropertyTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
</form>
