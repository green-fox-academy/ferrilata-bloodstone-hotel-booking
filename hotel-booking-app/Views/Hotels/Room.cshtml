@model  Hotel

<h1>Add a new room</h1>
<form asp-controller="Hotels" asp-action="Room" method="post">
    <div class="form-group">
        <label for="name">Name of the room</label>
        <input name="name" type="text" class="form-control" placeholder="Name of the room" />
    </div>
    <div class="form-group">
        <label for="price">Price of the room</label>
        <input name="price" type="number" class="form-control" placeholder="Price of the room" />
    </div>
    <div class="form-group">
        <label for="bedType">Type of the bed</label>    @*legordulo valaszto*@
        <input name="bedType" type="text" class="form-control" placeholder="Type of the bed" />
    </div>
    <div class="form-group">
        <label for="bedSize">Size of the bed</label>     @*legordulo valaszto?*@
        <input name="bedSize" type="number" class="form-control" placeholder="Size of the bed" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>