@model Hotel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StarRating"></label>
        <input asp-for="StarRating" class="form-control" />
        <span asp-validation-for="StarRating" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="LocationId" />
    <input type="hidden" asp-for="PropertyTypeId" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" asp-action="Hotel" asp-route-id="@Model.HotelId" role="button">Cancel</a>
</form>