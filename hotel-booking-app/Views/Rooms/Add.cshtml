@model Room
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Add Room"];
}

<h1>@Localizer["Add a new room"]</h1>
<form asp-controller="Rooms" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name">@Localizer["Name"]</label>
        <input asp-for="@Model.Name" type="text" class="form-control" placeholder=@Localizer["Name of the room"] />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">@Localizer["Price"]</label>
        <input asp-for="@Model.Price" type="number" class="form-control" placeholder=@Localizer["Price of the room per night"] />
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
        <a class="btn btn-danger" asp-controller="Hotels" asp-action="Hotel" asp-route-id="@Model.HotelId" role="button">@Localizer["Cancel"]</a>
    </div>
</form>