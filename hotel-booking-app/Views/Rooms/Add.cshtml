@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Room

@{
    ViewData["Title"] = @Localizer["Add Room"];
}

<h1>Add a new room</h1>
<form asp-controller="Rooms" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">@Localizer["Name"]</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name of the room" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">@Localizer["Price"]</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Price of the room" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
    </div>
</form>