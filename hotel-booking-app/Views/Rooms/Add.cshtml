@model Room
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Add Room"];
}

<h1>Add a new room</h1>
<form asp-controller="Rooms" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name">@Localizer["Name"]</label>
        <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Name of the room" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">@Localizer["Price"]</label>
        <input asp-for="@Model.Price" type="number" class="form-control" placeholder="Price of the room" />
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
    </div>
</form>