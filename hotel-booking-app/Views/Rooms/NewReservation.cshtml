@model ReservationViewModel
@{
    ViewData["Title"] = "Reservation";
}

<h2>New Reservation</h2>

<form asp-controller="Rooms" asp-action="NewReservation" method="post">
    <div class="form-group">
        <label asp-for="@Model.Reservation.GuestNumber"></label>
        <input asp-for="@Model.Reservation.GuestNumber" class="form-control" />
        <span asp-validation-for="@Model.Reservation.GuestNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Reservation.GuestNames"></label>
        <input asp-for="@Model.Reservation.GuestNames" class="form-control" />
        <span asp-validation-for="@Model.Reservation.GuestNames" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Reservation.FromDate"></label>
        <input asp-for="@Model.Reservation.FromDate" type="date" asp-format="{0:yy-MM-dd}" class="form-control" />
        <span asp-validation-for="@Model.Reservation.FromDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Reservation.ToDate"></label>
        <input asp-for="@Model.Reservation.ToDate" type="date" asp-format="{0:yy-MM-dd}" class="form-control" />
        <span asp-validation-for="@Model.Reservation.ToDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" role="button"
       asp-controller="Hotels" asp-action="Hotel"
       asp-route-id="@Model.HotelId">Cancel</a>
</form>


